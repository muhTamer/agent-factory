{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "agent_blueprint.schema.json",
    "title": "AgentBlueprint",
    "type": "object",
    "required": [
        "id",
        "agent_kind",
        "description",
        "capabilities",
        "inputs"
    ],
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1
        },
        "agent_kind": {
            "type": "string",
            "enum": [
                "knowledge_rag",
                "workflow_runner",
                "tool_operator"
            ]
        },
        "role_name": {
            "type": "string"
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "capabilities": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "vertical": {
            "type": "string"
        },
        "tools": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "knowledge_sources": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "kind",
                    "path"
                ],
                "properties": {
                    "kind": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            }
        },
        "policies": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "kind",
                    "path"
                ],
                "properties": {
                    "kind": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            }
        },
        "prompt_bundle": {
            "type": "object",
            "properties": {
                "system": {
                    "type": "string"
                },
                "style": {
                    "type": "string"
                },
                "constraints": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": true
        },
        "evaluation": {
            "type": "object",
            "properties": {
                "smoke_tests": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "name",
                            "input"
                        ],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "input": {
                                "type": "object"
                            },
                            "expected": {
                                "type": "object"
                            }
                        },
                        "additionalProperties": true
                    }
                }
            },
            "additionalProperties": true
        },
        "inputs": {
            "type": "object",
            "additionalProperties": true
        }
    },
    "additionalProperties": true,
    "allOf": [
        {
            "if": {
                "properties": {
                    "agent_kind": {
                        "const": "workflow_runner"
                    }
                }
            },
            "then": {
                "properties": {
                    "inputs": {
                        "type": "object",
                        "required": [
                            "workflow_spec"
                        ],
                        "properties": {
                            "workflow_spec": {
                                "type": "object"
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "agent_kind": {
                        "const": "knowledge_rag"
                    }
                }
            },
            "then": {
                "properties": {
                    "inputs": {
                        "type": "object",
                        "required": [
                            "docs"
                        ],
                        "properties": {
                            "docs": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "minItems": 1
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "agent_kind": {
                        "const": "tool_operator"
                    }
                }
            },
            "then": {
                "properties": {
                    "inputs": {
                        "type": "object",
                        "required": [
                            "tool"
                        ],
                        "properties": {
                            "tool": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    ]
}