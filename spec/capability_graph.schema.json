{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CapabilityGraph",
  "type": "object",
  "properties": {
    "vertical": {
      "type": "string"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "confidence": {
            "type": "number"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "agent_template": {
            "type": "string"
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "missing_capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "capabilities"
  ]
}